<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:background="@color/gray"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:scrollbars="none">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<RelativeLayout
				android:id="@+id/setting_user"
				android:layout_width="fill_parent"
				android:layout_height="70dp"
				android:background="@color/colorPrimary"
				android:paddingBottom="5dp"
				android:paddingTop="0dp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp">

					<ImageView
						android:id="@+id/head"
						android:layout_width="70.0dip"
						android:layout_height="70.0dip"
						android:layout_marginLeft="17dp"
						android:layout_marginRight="10dp"
						android:src="@drawable/mylogo" />

					<TextView
						android:id="@+id/info_name"
						style="@style/TxtTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:layout_toRightOf="@+id/head"
						android:text="Hao Zhang"
						android:textColor="@color/white"
						android:textSize="18.0dip"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/info_ip"
						style="@style/txt_ContextStyle1"
						android:layout_below="@+id/info_name"
						android:layout_marginLeft="6dp"
						android:layout_marginTop="10dp"
						android:layout_toRightOf="@+id/head"
						android:text="127.0.0.1"
						android:textColor="@color/white"
						android:textSize="10.0dip" />


					<ImageView
						android:id="@+id/iv_sex"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="17dp"
						android:layout_toRightOf="@+id/info_name"
						android:src="@drawable/ic_sex_male" />

				</RelativeLayout>

			</RelativeLayout>

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:layout_marginTop="15dp"
				android:background="#ffeeeeee" />


			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="#ffeeeeee" />

			<TextView
				android:id="@+id/info_rename"
				style="@style/TxtTitle"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:background="@drawable/setting_item_selector"
				android:drawableLeft="@drawable/ic_home_up"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="Rename"
				android:textSize="16sp" />

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="#ffeeeeee" />

			<TextView
				android:id="@+id/reset_sex"
				style="@style/TxtTitle"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:background="@drawable/setting_item_selector"
				android:drawableLeft="@drawable/ic_home_refresh"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="Switch Sex"
				android:textSize="16sp" />

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="#ffeeeeee" />

			<TextView
				android:id="@+id/show_server_info"
				style="@style/TxtTitle"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:background="@drawable/setting_item_selector"
				android:drawableLeft="@drawable/ic_share_wx_circle"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="Show Server Info"
				android:textSize="16sp" />

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="#ffeeeeee" />

			<TextView
				android:id="@+id/rating_me"
				style="@style/TxtTitle"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:layout_marginTop="20dp"
				android:background="@drawable/setting_item_selector"
				android:drawableLeft="@drawable/chathistory"
				android:drawablePadding="10dp"
				android:drawableRight="@drawable/right"
				android:gravity="center_vertical"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="Rating Me"
				android:textSize="16sp" />

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="#ffeeeeee" />

			<TextView
				android:id="@+id/about"
				style="@style/TxtTitle"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:layout_marginTop="20dp"
				android:background="@drawable/setting_item_selector"
				android:drawableLeft="@drawable/v2"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="About"

				android:textSize="16sp" />

			<View
				android:layout_width="fill_parent"
				android:layout_height="1.0dip"
				android:background="@color/black2" />

			<Button
				android:id="@+id/btn_exit"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="12dp"
				android:layout_marginRight="12dp"
				android:layout_marginTop="35dp"
				android:background="#3f51b5"
				android:paddingBottom="7dp"
				android:paddingTop="7dp"
				android:text="EXIT"
				android:textColor="@android:color/white"
				android:textSize="18sp" />


		</LinearLayout>

	</ScrollView>
</LinearLayout>